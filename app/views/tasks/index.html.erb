<h1><%= Task.model_name.human %>管理</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= t Task.human_attribute_name(:is_finish) %></th>
      <th><%= t Task.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>


        <td><%= task.is_finish %></td>



        <td><%= task.name %></td>

        <td>
          <%= link_to '表示', task, class: "btn btn-secondary" %>
          <%= link_to '編集', edit_task_path(task), class: "btn btn-primary" %>
          <%= link_to '削除', task, method: :delete, class: "btn btn-danger", data: { confirm: '本当によろしいですか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_task_path, class: "btn btn-success" %>
